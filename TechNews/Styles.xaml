<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">
    <DataTemplate x:Key="FeedItemSummaryStyle">
        <StackPanel Orientation="Vertical" Width="397" Margin="0,0,0,5">
            <TextBlock Margin="0" Style="{StaticResource PhoneTextLargeStyle}" TextWrapping="Wrap" Text="{Binding Title}" FontSize="16" FontFamily="Segoe WP" FontWeight="Bold"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".5*"/>
                    <ColumnDefinition Width=".5*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Margin="0" Grid.Column="0" Style="{StaticResource PhoneTextSubtleStyle}" TextWrapping="Wrap" Text="{Binding ParentFeed.Title}" FontSize="13.333" FontWeight="Bold" HorizontalAlignment="Left"/>
                <TextBlock Margin="0" Grid.Column="1" Style="{StaticResource PhoneTextSubtleStyle}" TextWrapping="Wrap" Text="{Binding DatePublished}" FontSize="14.667" HorizontalAlignment="Right"/>
            </Grid>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>